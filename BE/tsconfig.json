{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,

    "rootDir": "src",
    "outDir": "dist",

    "lib": ["ES2020"],
    "types": ["node", "express"],

    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "isolatedModules": false,
    "moduleDetection": "auto"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
